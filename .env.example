# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/kxshare

# Encryption Keys (Generate your own secure keys)
ENCRYPTION_KEY=your-secure-encryption-key-here-min-32-chars
SECRET_KEY=your-flask-secret-key-here

# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# Application Settings
FLASK_ENV=production
DEBUG=False
PORT=5000

# Session Configuration
SESSION_TYPE=filesystem
PERMANENT_SESSION_LIFETIME=86400

# Security Settings
MAX_CONTENT_LENGTH=104857600  # 100MB max file size
ALLOWED_EXTENSIONS=.py,.js,.html,.css,.md,.json,.txt

# Link Expiry Settings (in days)
DEFAULT_EXPIRY_DAYS=7
MAX_EXPIRY_DAYS=365
MIN_EXPIRY_DAYS=1
